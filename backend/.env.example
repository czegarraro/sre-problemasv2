# Server Configuration
PORT=8080
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string
MONGODB_DB_NAME=your_database_name
MONGODB_COLLECTION_NAME=your_collection_name

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=30m

# CORS Configuration
# You can specify multiple origins separated by commas
# For development: http://localhost:5173
# For production: https://your-frontend-app.vercel.app
# For both: http://localhost:5173,https://your-frontend-app.vercel.app
CORS_ORIGIN=https://your-frontend-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===== DYNATRACE API CONFIGURATION =====
DT_ENVIRONMENT_URL=https://your-environment.live.dynatrace.com
DT_API_TOKEN=dt0c01.your_token_here
DT_TIMEOUT=30000
DT_MAX_RETRIES=3

# ===== INGESTION CONFIGURATION =====
# Retain last N days (90 recommended)
INGESTION_RETENTION_DAYS=90
# Max problems per execution
INGESTION_MAX_PROBLEMS=15000
# Max parallel requests to Dynatrace
INGESTION_MAX_CONCURRENT=5
# Max storage in GB
INGESTION_MAX_STORAGE_GB=150
# Warning threshold (percentage)
INGESTION_WARNING_THRESHOLD=80
# Daily execution time (24h format)
INGESTION_DAILY_TIME=00:00
# Data cleanup time
INGESTION_RETENTION_TIME=02:00
# Enable cron jobs
ENABLE_CRON_JOBS=true

# ===== RETENTION CONFIGURATION =====
# Retain last N days
RETENTION_DAYS=90
# Archive after N days
ARCHIVE_AFTER_DAYS=90
# Delete after N days (0 = never)
DELETE_AFTER_DAYS=180
# Archive collection name
RETENTION_ARCHIVE_COLLECTION=problems-archive
# Auto cleanup enabled
RETENTION_AUTO_CLEANUP=true
# Batch size for processing
RETENTION_BATCH_SIZE=1000
