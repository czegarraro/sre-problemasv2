{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/index.ts" },
    { "source": "/assets/(.*)", "destination": "/frontend/assets/$1" },
    { "source": "/vite.svg", "destination": "/frontend/vite.svg" },
    { "source": "/favicon.ico", "destination": "/frontend/favicon.ico" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ],
  "builds": [
    {
      "src": "backend/api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ]
}
